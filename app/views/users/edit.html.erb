<div class="users_h1_box"><h1>ユーザー編集画面</h1></div>
<%= render 'form' %>
<div class="login">
  <div class="login-triangle"></div>
  <h2 class="login-header">Log in</h2>
  <%= form_with(model: @user, local: true ) do |f| %>
    <form class="login-container">
      <%= f.label "name：" %><br>
      <%= f.text_field :name %><br>
      <%= f.label "email：" %><br>
      <%= f.text_field :email %><br>
      <%= f.label "password："  %><br>
      <%= f.password_field :password %><br>
      <%= f.label "password_confirmation："  %><br>
      <%= f.password_field :password_confirmation %><br><br>
      <%= f.label "image" %>
      <% if @user.avatar1.url  %>
        <%= image_tag(@user.avatar1.url) if @user.avatar1 && @user.avatar1.url %>
      <% end %>
      <%= f.file_field :avatar1 %>
      <%= f.hidden_field :avatar1_cache %><br><br>
      
      <%= f.submit "edit" %><br><br>
    </form>
    <% end %>
</div>
<%= link_to "back", user_path(@user.id)%>
